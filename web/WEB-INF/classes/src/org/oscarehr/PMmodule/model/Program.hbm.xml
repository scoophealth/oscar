<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="Program" table="program">
		<id
			column="program_id"
			name="Id"
			type="integer"
			unsaved-value="0"
		>
			<generator class="native" />
		</id>
		<property
			name="NumOfMembers"
			type="integer"
			formula="(select count(*) from admission a where a.program_id = program_id and a.admission_status = 'current')"
		 />
		 
		 <property
			name="QueueSize"
			type="integer"
			formula="(select count(*) from program_queue a where a.program_id = program_id and a.status = 'active')"
		 />
		<property
			column="max_allowed"
			length="6"
			name="MaxAllowed"
			not-null="true"
			type="integer"
		 />
		<property
			column="type"
			length="50"
			name="Type"
			not-null="false"
			type="string"
		 />
		<property
			column="descr"
			length="255"
			name="Descr"
			not-null="false"
			type="string"
		 />
		<property
			column="address"
			length="255"
			name="Address"
			not-null="false"
			type="string"
		 />
		<property
			column="phone"
			length="25"
			name="Phone"
			not-null="false"
			type="string"
		 />
		<property
			column="fax"
			length="25"
			name="Fax"
			not-null="false"
			type="string"
		 />
		<property
			column="url"
			length="100"
			name="Url"
			not-null="false"
			type="string"
		 />
		<property
			column="email"
			length="50"
			name="Email"
			not-null="false"
			type="string"
		 />
		<property
			column="emergency_number"
			length="25"
			name="EmergencyNumber"
			not-null="false"
			type="string"
		 />
		<property
			column="location"
			length="70"
			name="Location"
			not-null="false"
			type="string"
		 />
		<property
			column="name"
			length="70"
			name="Name"
			not-null="true"
			type="string"
		 />
		<property
			column="agency_id"
			length="11"
			name="AgencyId"
			not-null="true"
			type="java.lang.Long"
		 />
		<property
			column="holding_tank"
			name="HoldingTank"
			not-null="false"
			type="boolean"
		 />
		 <property
			column="allow_batch_admission"
			name="AllowBatchAdmission"
			not-null="false"
			type="boolean"
		 />
		 <property
			column="allow_batch_discharge"
			name="AllowBatchDischarge"
			not-null="false"
			type="boolean"
		 />
		 <property
			column="hic"
			name="hic"
			not-null="false"
			type="boolean"
		 />		 
	</class>
</hibernate-mapping>
