<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="Program" table="program">
		<id column="program_id" name="id" type="integer" unsaved-value="0">
			<generator class="native" />
		</id>
		<property name="numOfMembers" type="integer" formula="(select count(*) from admission a where a.program_id = program_id and a.admission_status = 'current')" />
		<property name="queueSize" type="integer" formula="(select count(*) from program_queue a where a.program_id = program_id and a.status = 'active')" />
		<property name="maxAllowed" column="max_allowed" type="integer" not-null="true" length="6" />
		<property name="type" column="type" type="string" not-null="false" length="50" />
		<property name="descr" column="descr" type="string" not-null="false" length="255" />
		<property name="address" column="address" type="string" not-null="true" length="255" />
		<property name="phone" column="phone" type="string" not-null="true" length="255" />
		<property name="fax" column="fax" type="string" not-null="true" length="255" />
		<property name="url" column="url" type="string" not-null="true" length="255" />
		<property name="email" column="email" type="string" not-null="true" length="255" />
		<property name="emergencyNumber" column="emergency_number" type="string" not-null="true" length="255" />
		<property name="location" column="location" type="string" not-null="false" length="70" />
		<property name="name" column="name" type="string" not-null="true" length="70" />
		<property name="agencyId" column="agency_id" type="java.lang.Long" not-null="true" length="11" />
		<property name="holdingTank" column="holding_tank" type="boolean" not-null="true" length="1" />
		<property name="allowBatchAdmission" column="allow_batch_admission" type="boolean" not-null="false" length="1" />
		<property name="allowBatchDischarge" column="allow_batch_discharge" type="boolean" not-null="false" length="1" />
		<property name="hic" column="hic" type="boolean" not-null="false" length="1" />
		<property name="programStatus" column="program_status" type="string" not-null="true" />
		<property name="intakeProgram" column="intake_program" type="integer" not-null="false" length="10" />
		<property name="bedProgramLinkId" column="bed_program_link_id" type="integer" not-null="false" length="10" />
		<property name="manOrWoman" column="manOrWoman" type="string" not-null="false" length="6"/>
		<property name="transgender" column="transgender" type="boolean" not-null="false" length="1"/>
		<property name="firstNation" column="firstNation" type="boolean" not-null="false" length="1"/>
		<property name="bedProgramAffiliated" column="bedProgramAffiliated" type="boolean" not-null="false" length="1"/>
		<property name="alcohol" column="alcohol" type="boolean" not-null="false" length="1"/>
		<property name="abstinenceSupport" column="abstinenceSupport" type="string" not-null="false" length="20"/>
		<property name="physicalHealth" column="physicalHealth" type="boolean" not-null="false" length="1"/>
		<property name="mentalHealth" column="mentalHealth" type="boolean" not-null="false" length="1"/>
		<property name="housing" column="housing" type="boolean" not-null="false" length="1"/>
		<property name="exclusiveView" column="exclusive_view" type="string" not-null="false" length="20"/>
	</class>
</hibernate-mapping>
